<%- include("../partials/header")%>
    <link rel="stylesheet" href="/campground/new.css">
    <link rel="stylesheet" href="/image.min.css">
    </head>

    <body>
        <%- include("../partials/nav")%>

            <div class="container">
                <div class="row">
                    <div style="width:85%;overflow-y:auto" class="mt-3 mt-md-5  mx-auto p-0">
                        <form action="/campgrounds" method="POST" class="p-0" style="display:none" enctype="multipart/form-data">
                            <h1 style="font-weight:400;color:white">
                                Enter New Camp
                            </h1>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-campground"></i><span>
							</div>
							<input type="text" placeholder="Enter Campground Name" class="form-control form-group" name="campground[name]" required>
						</div>


						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-map-marked-alt"></i></span>
                                </div>
                                <input type="text" placeholder="Enter Location" class="form-control" name="campground[location]" required>
                            </div>

                            <textarea class="form-control form-group" name="campground[description]" placeholder="Describe the Camp Ground....." rows="3" maxlength="600" minlength="400" required></textarea>


                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="image" style="box-shadow:none !important;border:none !important" accept=".gif,.jpg,.png | image/*">
                                    <label class="custom-file-label" for="loacl">Choose Campground Image</label>
                                </div>
                            </div>
                            <!-- <div style="color:white;text-align:center">OR</div> -->
                            <!-- <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">http://</i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="Enter URL" name="campground[image]" style="width:0.48rem" id="url">
                            </div> -->

                            <div class="mt-2">
                                <input type="checkbox" id="ckeck" required>
                                <label class="form-ckeck-label text-light " for="check"> I confirm that the 
								above details are 
								true</label>
                            </div>

                            <div class="mt-1">
                                <button class="btn btn-info" type="submit">Upload</button>
                            </div>


                        </form>

                    </div>

                </div>
            </div>






            <%- include("../partials/footer")%>

                <script>
                    $(document).ready(function() {
                        $("form").transition('fade down', 800);
                    });
                </script>

    </body>

    </html>
<%-include("partials/header")%>
    <link rel="stylesheet" href="/login.css">
    </head>

    <body>
        <video autoplay muted loop id="myVideo">
            <source src="https://media.istockphoto.com/videos/aurora-borealis-above-ice-video-id473346705" type="video/mp4">
        </video>
        <div class="container">
            <form class="ui segment form" action="/signup" method="POST" id="register">
                <div class="ui header">Signup</div>
                <div class="field">
                    <label>Username</label>
                    <div class="ui left icon input ">
                        <input type="text" name="username" required>
                        <i class="user icon"></i>
                    </div>
                </div>
                <div class="field">
                    <label>Passowrd</label>
                    <div class="ui left icon input">
                        <input type="password" name="password" required>
                        <i class="lock icon"></i>
                    </div>
                </div>
                <div class="mb-3 field">
                    <span class="mr-2 mb-1">Gender:</span>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male" required>
                        <label class="form-check-label" for="inlineRadio1">
                            <div class="ui avatar image">
                                <img src="/media/male-avatar-profile-icon-round-african-american-vector-18307210.jpg" alt="">
                            </div>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female" required>
                        <label class="form-check-label" for="inlineRadio2">
                            <div class="ui avatar image">
                                <img src="/media/female-avatar-profile-icon-round-african-american-vector-18307279.jpg" alt="">
                            </div>
                        </label>
                    </div>
                </div>
                <div class="field" style="display:inline">
                    <div class="ui checkbox">
                        <input type="checkbox" tabindex="0" required>
                        <label>I agree to the Terms and Conditions</label>
                    </div>
                </div>
                <div class="float-right mb-2">
                    <a href="/login">Already have an account? Login</a>
                </div>

                <button onclick="sendGender()" class="ui button blue mt-1" type="submit" style="width:100%">Signup</button>
            </form>
            <%if(error&&error.length>0){ %>
                <div class="ui warning message" id="error">
                    <i class="close icon"></i>
                    <div class="text">
                        <%=error %>
                    </div>
                </div>
                <% } %>
                    <%if(success&&success.length>0){%>
                        <div class="message alert alert-success" id="success">
                            <%=success%>
                                <i class="close icon mr-auto"></i>
                        </div>
                        <%}%>
        </div>

        <%-include("partials/footer")%>
            <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
            <script>
                function sendGender() {
                    var gender;
                    var ele = document.getElementsByName('gender');
                    for (i = 0; i < ele.length; i++) {
                        if (ele[i].checked) {}
                        gender = ele[i].value;
                    }
                    axios.post('/signup', {
                        gender: gender
                    });
                }
            </script>
    </body>

    </html>